<% if user_signed_in? %>

  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post[:body] %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Post', new_post_path %>

<% else %>
  <%= link_to 'Sign in',  user_session_path  %>  
  <%= link_to 'Sign up',  new_user_registration_path  %>  
<% end %>