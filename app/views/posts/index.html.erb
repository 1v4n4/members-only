<div class="mx-5">
<% if user_signed_in? %>
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
       <%= post.user.name %>
       <br>
         <%= post[:body] %>
         <br>
        
        
        
      <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Post', new_post_path %>

<% else %>
   <% @posts.each do |post| %>
       <%= post.body %><br>
    <% end %>
<% end %>
</div>
